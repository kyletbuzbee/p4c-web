// NEW FILE: tests/setup.ts
import '@testing-library/jest-dom';
import { vi } from 'vitest';

// Mock environment variables
vi.stubGlobal('process', {
  env: {
    API_KEY: 'test-api-key',
    NODE_ENV: 'test'
  }
});

// Mock IntersectionObserver
global.IntersectionObserver = vi.fn().mockImplementation(() => ({
  observe: vi.fn(),
  unobserve: vi.fn(),
  disconnect: vi.fn(),
}));

// Mock ResizeObserver
global.ResizeObserver = vi.fn().mockImplementation(() => ({
  observe: vi.fn(),
  unobserve: vi.fn(),
  disconnect: vi.fn(),
}));

// Mock fetch
global.fetch = vi.fn();

// NEW FILE: tests/component.test.tsx
import { render, screen, fireEvent, waitFor } from '@testing-library/react';
import { describe, it, expect, vi, beforeEach } from 'vitest';
import Home from '../pages/Home';

// Mock child components
vi.mock('../components/Hero', () => ({
  default: () => <div data-testid="hero">Hero Component</div>
}));

vi.mock('../components/ImpactDashboard', () => ({
  default: () => <div data-testid="impact-dashboard">Impact Dashboard</div>
}));

vi.mock('../components/PropertyCard', () => ({
  default: ({ property }: { property: any }) => (
    <div data-testid="property-card">
      <h3>{property.title}</h3>
      <p>{property.address}</p>
    </div>
  )
}));

const mockProperties = [
  {
    id: '1',
    title: 'Test Property',
    address: '123 Test St',
    price: 1000,
    beds: 2,
    baths: 1,
    sqft: 800,
    imageUrl: '/test.jpg',
    badges: ['Section 8 Approved'],
    description: 'A test property'
  }
];

// Mock the properties data
vi.mock('../data/properties', () => ({
  properties: mockProperties
}));

describe('Home Component', () => {
  beforeEach(() => {
    vi.clearAllMocks();
  });

  it('renders property search interface', () => {
    render(<Home />);
    
    expect(screen.getByLabelText(/search properties/i)).toBeInTheDocument();
    expect(screen.getByLabelText(/maximum price/i)).toBeInTheDocument();
    expect(screen.getByLabelText(/minimum bedrooms/i)).toBeInTheDocument();
  });

  it('filters properties by search query', async () => {
    render(<Home />);
    
    const searchInput = screen.getByLabelText(/search properties/i);
    fireEvent.change(searchInput, { target: { value: 'Test Property' } });
    
    await waitFor(() => {
      expect(screen.getByTestId('property-card')).toBeInTheDocument();
    });
  });

  it('filters properties by price range', async () => {
    render(<Home />);
    
    const priceSelect = screen.getByLabelText(/maximum price/i);
    fireEvent.change(priceSelect, { target: { value: '800' } });
    
    await waitFor(() => {
      // Should show no properties since test property is $1000
      expect(screen.queryByTestId('property-card')).not.toBeInTheDocument();
    });
  });

  it('shows no results message when filters yield no properties', async () => {
    render(<Home />);
    
    const priceSelect = screen.getByLabelText(/maximum price/i);
    fireEvent.change(priceSelect, { target: { value: '800' } });
    
    await waitFor(() => {
      expect(screen.getByText(/no homes found matching your criteria/i)).toBeInTheDocument();
    });
  });

  it('clears all filters when clear button is clicked', async () => {
    render(<Home />);
    
    // Set some filters
    const searchInput = screen.getByLabelText(/search properties/i);
    fireEvent.change(searchInput, { target: { value: 'test' } });
    
    // Clear filters
    const clearButton = screen.getByTitle(/clear filters/i);
    fireEvent.click(clearButton);
    
    await waitFor(() => {
      expect(searchInput).toHaveValue('');
      expect(screen.getByTestId('property-card')).toBeInTheDocument();
    });
  });
});

// ============================================
// 6. PERFORMANCE MONITORING HOOK
// ============================================

// NEW FILE: hooks/usePerformanceMonitor.ts
import { useEffect, useRef } from 'react';

interface PerformanceMetrics {
  name: string;
  value: number;
  rating: 'good' | 'needs-improvement' | 'poor';
}

export const usePerformanceMonitor = (componentName: string) => {
  const startTime = useRef<number>(0);
  const mountTime = useRef<number>(0);

  useEffect(() => {
    startTime.current = performance.now();

    // Measure Core Web Vitals
    const measureWebVitals = () => {
      // Largest Contentful Paint (LCP)
      new PerformanceObserver((list) => {
        const entries = list.getEntries();
        const lastEntry = entries[entries.length - 1];
        
        const lcp = lastEntry.startTime;
        const lcpRating = lcp < 2500 ? 'good' : lcp < 4000 ? 'needs-improvement' : 'poor';
        
        console.log(`LCP: ${lcp}ms (${lcpRating})`);
        
        // Send to analytics service
        sendMetric('LCP', lcp, lcpRating);
      }).observe({ entryTypes: ['largest-contentful-paint'] });

      // First Input Delay (FID)
      new PerformanceObserver((list) => {
        for (const entry of list.getEntries()) {
          const fid = entry.processingStart - entry.startTime;
          const fidRating = fid < 100 ? 'good' : fid < 300 ? 'needs-improvement' : 'poor';
          
          console.log(`FID: ${fid}ms (${fidRating})`);
          sendMetric('FID', fid, fidRating);
        }
      }).observe({ entryTypes: ['first-input'] });

      // Cumulative Layout Shift (CLS)
      let clsScore = 0;
      new PerformanceObserver((list) => {
        for (const entry of list.getEntries()) {
          if (!entry.hadRecentInput) {
            clsScore += entry.value;
          }
        }
        
        const clsRating = clsScore < 0.1 ? 'good' : clsScore < 0.25 ? 'needs-improvement' : 'poor';
        console.log(`CLS: ${clsScore} (${clsRating})`);
        sendMetric('CLS', clsScore, clsRating);
      }).observe({ entryTypes: ['layout-shift'] });
    };

    const sendMetric = (name: string, value: number, rating: 'good' | 'needs-improvement' | 'poor') => {
      // In production, send to analytics service
      if (typeof window !== 'undefined' && window.gtag) {
        window.gtag('event', 'web_vitals', {
          event_category: 'Performance',
          event_label: name,
          value: Math.round(name === 'CLS' ? value * 1000 : value),
          non_interaction: true,
        });
      }
    };

    measureWebVitals();

    // Component mount time
    mountTime.current = performance.now();

    return () => {
      const totalTime = performance.now() - startTime.current;
      console.log(`${componentName} mounted in ${totalTime.toFixed(2)}ms`);
    };
  }, [componentName]);
};

