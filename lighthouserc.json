{
  "ci": {
    "collect": {
      "staticDistDir": "./dist",
      "settings": {
        "chromeFlags": "--no-sandbox",
        "staticFileExtensions": [
          ".html",
          ".js",
          ".css",
          ".png",
          ".svg",
          ".webp",
          ".ico",
          ".json"
        ],
        "maxWaitForLoad": 60000,
        "maxWaitForFcp": 45000
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "installable-manifest": "on",
        "service-worker": "on",
        "apple-touch-icon": "on",
        "icon-size-192": "on",
        "icon-size-512": "on",

        "csp-xss": "warning",

        "html-has-lang": "on",
        "document-title": "on",
        "meta-viewport": "on",
        "color-contrast": "on",
        "tap-targets": "on",
        "font-size": "on",
        "resource-summary:image:size": ["warning", { "maxSize": 5000000 }],
        "total-byte-weight": ["warning", { "maxSize": 10000000 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
