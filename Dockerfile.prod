FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Serve the built application
EXPOSE 3001

# Use a simple HTTP server to serve the built files
RUN npm install -g serve
CMD ["serve", "-s", "dist", "-l", "3001"]