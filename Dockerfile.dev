FROM node:20-alpine

WORKDIR /app

# Install dependencies separately to leverage Docker layer caching
COPY package*.json ./
RUN npm install

# Copy the rest of the source code
COPY . .

# Vite default dev port
EXPOSE 3001

# Bind to 0.0.0.0 so the host can access the container's port
# Enable polling for HMR reliability on Windows/macOS Docker volumes
ENV CHOKIDAR_USEPOLLING=true

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3001"]